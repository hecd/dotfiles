#!/bin/bash

export DATA_DIR=/mnt/webdav
export RINGS=$DATA_DIR
export RING1=$RINGS/ring1
export RING2=$RINGS/ring2
export DOTFILES_DIR=$RING1/dotfiles
export DOTFILES=$DOTFILES_DIR
export SCRATCH_DIR=$RING2/root/scratch
export EXTRA_DIR=$RING1/extra
export MEDIA_DIR=$RING1/Media
# Environments referring local paths only (never shared).
export LOCAL_DIR=$HOME/local
# Contains user-specific programs
export LOCAL_BIN_DIR=$LOCAL_DIR/bin
export PACKER_CACHE_DIR=$LOCAL_DIR/packer
